                                    <field name="jzsyzyzsj_ratio" class="oe_inline"/>
                                    <field name="jzsygjjbyw_ratio" class="oe_inline"/>
                                    <field name="dldlcyxgzs_case" class="oe_inline"/>
                                    <field name="yxzyjsry_ratio" class="oe_inline"/>
